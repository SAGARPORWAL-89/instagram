}

.instap {
    position: relative;
}

.instap::before {
    content: '';
    position: absolute;
    top: -9px;
    left: -0;
    width: 102px;
    height: 20px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.228);
}

.instap::after {
    content: '';
    position: absolute;
    width: 102px;
    height: 20px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.228);
    right: 0;
    top: -9px;
}
.instapp{
